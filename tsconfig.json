{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom", "dom.iterable"]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "packages/**/*.ts",
    "src/*.ts",
    "types/*.d.ts"
  ]
}
